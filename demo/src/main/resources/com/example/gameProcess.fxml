<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="200.0" minWidth="290.0" spacing="20.0" style="-fx-background-color: #1004ba;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.GameProcessController">
    <children>
      <HBox maxWidth="820.0" prefHeight="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onToStartScreenClicked" stylesheets="@styles.css" text="To Start Screen" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label fx:id="questionLabel" styleClass="question" stylesheets="@styles.css" text="Question Placeholder" textAlignment="CENTER" />
      <VBox fx:id="answersContainer" alignment="CENTER" prefWidth="100.0" spacing="10.0">
         <children>
         </children>
      </VBox>
      <Button fx:id="answerButton" mnemonicParsing="false" onAction="#onAnswerClick" prefHeight="26.0" stylesheets="@styles.css" text="Next" textFill="#dddddd" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
